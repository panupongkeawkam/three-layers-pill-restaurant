<!DOCTYPE html>
<html lang="en">

<%- include('header') %>

  <body>
    <div id="app" class="container" ref="container">
      <div class="d-flex flex-column justify-content-center align-items-center p-3 h-100">
        <i class="fas fa-circle-check mb-4" style="font-size: 7em; color: #179967"></i>
        <span class="fw-bold" style="font-size: 1.2em">Completed</span>
      </div>
    </div>
  </body>

  <script>
    var app = new Vue({
      el: '#app',
      data: {},
      methods: {},
      mounted() {
        this.$refs.container.style.height = window.outerHeight + 'px'

        window.onresize = (event) => {
          this.$refs.container.style.height = window.innerHeight + 'px'
        }
      }
    })
  </script>

</html>